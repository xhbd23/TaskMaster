<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:paddingHorizontal="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/shape_bg_search"
            app:iconifiedByDefault="true"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/include_expired"
            layout="@layout/layout_todo_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/searchView_top" />

        <include
            android:id="@+id/include_today"
            layout="@layout/layout_todo_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/include_expired" />

        <include
            android:id="@+id/include_tomorrow"
            layout="@layout/layout_todo_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/include_today" />


        <include
            android:id="@+id/include_no_date"
            layout="@layout/layout_todo_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/include_tomorrow" />

        <include
            android:id="@+id/include_completed"
            layout="@layout/layout_todo_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/include_no_date" />


    </LinearLayout>
</androidx.core.widget.NestedScrollView>